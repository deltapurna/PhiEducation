<h2>Hello the Awesomest Teacher!<br>
<small>Ready to rock the classroom?</small></h2>

<%= form_tag(:teachers, class: 'form-inline')  do %>
  <div class="form-group">
    <%= label_tag :room_code, 'Insert your room code:' %>
    <%= text_field_tag :room_code, '', class: 'form-control' %>
  </div>
  <p><%= submit_tag "Let's roll!", class: 'btn btn-primary' %></p>
<% end %>
